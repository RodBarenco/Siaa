APP_NAME=siaa-vault
APP_ENV=development
APP_PORT=8002

# ⚠️  MASTER KEY — gerada UMA VEZ e nunca mais muda
# Se mudar, todos os segredos no banco ficam ILEGÍVEIS
# Gere com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_KEY=gere-e-cole-aqui-nunca-commite-isso

# JWT para sessões dos módulos externos (siaa-bot, módulos plugáveis)
# Gere com: openssl rand -hex 32
JWT_SECRET=outro-segredo-forte-aqui
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=15

# Admin — acesso para criar clientes e gerenciar o vault via /admin/*
ADMIN_PASSWORD=senha-forte-do-admin

# Token interno rotativo — modelo siaa-proxy
# Chave FIXA usada pelos containers para buscar o token rotativo atual
# O token rotativo muda automaticamente; esta chave é a "senha da porta"
# Gere com: openssl rand -hex 32
INTERNAL_SECRET_KEY=chave-secreta-fixa-dos-containers

# Intervalo de rotação do token interno (horas)
TOKEN_ROTATE_HOURS=1

# Banco de dados (SQLite assíncrono)
DATABASE_URL=sqlite+aiosqlite:///./siaa_vault.db
