APP_NAME=siaa-proxy
APP_ENV=production
APP_PORT=8000

# Gere com: openssl rand -hex 32
SECRET_KEY=troque-por-uma-chave-segura-em-producao
API_TOKEN_EXPIRE_DAYS=30

# SQLite — persistido no volume /proxy-data
DATABASE_URL=sqlite+aiosqlite:////proxy-data/siaa_proxy.db

# Intervalos dos cron jobs
CRON_FETCH_PROXIES_MINUTES=60
CRON_VALIDATE_PROXIES_MINUTES=15

# Validação
PROXY_TIMEOUT_SECONDS=10
PROXY_TEST_URL=https://httpbin.org/ip
MAX_CONCURRENT_VALIDATIONS=30

# Playwright
BROWSER_TIMEOUT_MS=30000
BROWSER_HEADLESS=true
